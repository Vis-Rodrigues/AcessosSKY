@model IEnumerable<SDW.WebServiceJogoAPI.Models.Colaborador>

@using (Html.BeginForm("Cadastrar", "Colaborador", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Helper.Mensagem(@TempData["msg"])
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Registrar Colaborador</h3>
            </div>
            <div class="panel-body">
                <div class="form-inline">
                        @Html.Label("Nome", htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.Editor("Nome", new { htmlAttributes = new { @class = "form-control", @placeholder = "Informe o nome" } })
                      <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Salvar" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
    <table class="table table-striped table-hover">
        <tr>
            <th>Colaboradores</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nome</td>
                <td><a class="btn btn-danger"
   href="@Url.Action("Delete", "Colaborador", new { id=item.ColaboradorId })"
   onclick="return confirm('Desejar liberar o acesso?');">
    <i class="glyphicon glyphicon-remove"></i>&nbspExcluir
</a></td>
            </tr>
        }
    </table>