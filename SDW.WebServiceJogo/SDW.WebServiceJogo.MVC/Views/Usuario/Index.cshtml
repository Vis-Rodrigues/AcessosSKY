<!DOCTYPE html>
<html>
<head>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src="~/Imagens/logo.png" width="180" height="55" , class="navbar-brand" />
            </div>
        </div>
    </div>
    @using (Html.BeginForm("Index", "Usuario", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Helper.Mensagem2(@TempData["msg"])
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Informe a senha</h3>
                </div>
                <div class="panel-body">
                    <div class="form-inline">
                        @Html.Label("Senha", htmlAttributes: new { @class = "control-label col-md-2" })
                        <input type="password" class="form-control" name="Senha" />
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Logar" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</body>
</html>